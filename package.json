{
	"name": "gemini-code-analyst",
	"displayName": "Gemini Code Analyst",
	"description": "Analyze and fix selected code using the Gemini API.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other"
	],
	"main": "./extension.js",
	"activationEvents": [
		"onCommand:geminiCodeAnalyst.analyzeSelectedCode",
		"onView:geminiCodeAnalyst.sidebar"
	],
	"contributes": {
		"commands": [
			{
				"command": "geminiCodeAnalyst.analyzeSelectedCode",
				"title": "Analyze Code with Gemini"
			}
		],
		"viewsContainers": {
			"activitybar": [
				{
					"id": "gemini-analyst-container",
					"title": "Gemini Code Analyst",
					"icon": "svg/bug-solid-full.svg"
				}
			]
		},
		"views": {
			"gemini-analyst-container": [
				{
					"id": "geminiCodeAnalyst.sidebar",
					"name": "Analysis",
					"type": "webview"
				}
			]
		},
		"menus": {
			"editor/context": [
				{
					"command": "geminiCodeAnalyst.analyzeSelectedCode",
					"group": "navigation",
					"when": "editorHasSelection"
				}
			]
		}
	},
	"scripts": {
		"lint": "eslint .",
		"pretest": "npm run lint",
		"test": "node ./test/runTest.js"
	},
	"devDependencies": {
		"@types/glob": "^8.1.0",
		"@types/mocha": "^10.0.1",
		"@types/node": "20.2.5",
		"@types/vscode": "^1.80.0",
		"@typescript-eslint/eslint-plugin": "^5.59.8",
		"@typescript-eslint/parser": "^5.59.8",
		"@vscode/test-electron": "^2.3.2",
		"eslint": "^8.41.0",
		"glob": "^8.1.0",
		"mocha": "^10.2.0",
		"typescript": "^5.1.3"
	},
	"dependencies": {
		"@google/genai": "^1.21.0",
		"@google/generative-ai": "^0.24.1"
	}
}
