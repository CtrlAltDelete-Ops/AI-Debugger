{
	"name": "gemini-code-assistant",
	"displayName": "Gemini Code Assistant",
	"description": "Analyze, scan, and explain your code using Gemini AI with a RAG-powered sidebar.",
	"version": "1.0.0",
	"publisher": "your-name",
	"engines": {
		"vscode": "^1.80.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onCommand:geminiCode.analyzeSelected",
		"onCommand:geminiCode.scanProject",
		"onCommand:geminiCode.explainError",
		"onView:geminiCodeSidebar"
	],
	"main": "./extension.js",
	"contributes": {
		"commands": [
			{
				"command": "geminiCode.analyzeSelected",
				"title": "Analyze Selected Code"
			},
			{
				"command": "geminiCode.scanProject",
				"title": "Scan Project for Errors"
			},
			{
				"command": "geminiCode.explainError",
				"title": "Explain Error in Code"
			}
		],
		"menus": {
			"editor/context": [
				{
					"command": "geminiCode.analyzeSelected",
					"when": "editorHasSelection",
					"group": "navigation"
				},
				{
					"command": "geminiCode.explainError",
					"when": "editorHasSelection",
					"group": "navigation"
				}
			]
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "geminiSidebarContainer",
					"title": "Gemini",
					"icon": "svg/bug-solid-full.svg"
				}
			]
		},
		"views": {
			"geminiSidebarContainer": [
				{
					"id": "geminiCodeSidebar",
					"name": "Gemini Analysis",
					"type": "webview"
				}
			]
		}
	},
	"dependencies": {
		"@google/genai": "^1.20.0",
		"axios": "^1.6.0",
		"dotenv": "^17.2.3"
	}
}
